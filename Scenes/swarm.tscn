var target
const speed = 0.01

# Called when the node enters the scene tree for the first time.
func _ready():
	
	target = GameManager.field.get_rand_tile()
	
	goto_tile(target)
	
func goto_tile(tile):
	
	$Tween.stop_all()
	$Tween.interpolate_property(self, 
								\"global_position\", 
								global_position, 
								tile.global_position,
								(tile.global_position - global_position).length() * speed,
								Tween.TRANS_QUAD)

	$Tween.start()

